<ivy-module version="2.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">
    
    <info organisation="com.natpryce" module="snodge"/>

    <configurations>
        <conf name="main" visibility="public"/>
        <conf name="test" visibility="private" extends="main"/>
        <conf name="dev" visibility="private" extends="test"/>
    </configurations>

    <dependencies>
        <dependency org="com.google.code.gson" name="gson" rev="2.2.4" conf="main->default;dev->sources,javadoc"/>
        <dependency org="com.google.guava" name="guava" rev="16.0.1" conf="main->default;dev->sources,javadoc"/>
        <dependency org="org.hamcrest" name="hamcrest-library" rev="1.3" conf="test->default;dev->sources,javadoc"/>
        <dependency org="junit" name="junit" rev="4.11" conf="test->default;dev->sources,javadoc"/>
    </dependencies>
</ivy-module>
